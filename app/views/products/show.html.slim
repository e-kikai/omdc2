    .map-area
      - if @product.display == "店頭出品"
        <iframe id="gmap2" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" width="100%" height="400" src="http://maps.google.co.jp/maps?f=q&amp;q=%E5%A4%A7%E9%98%AA%E5%BA%9C%E6%9D%B1%E5%A4%A7%E9%98%AA%E5%B8%82%E6%9C%AC%E5%BA%84%E8%A5%BF2-4-1+(%E5%A0%80%E5%B7%9D%E6%A9%9F%E6%A2%B0%E6%A0%AA%E5%BC%8F%E4%BC%9A%E7%A4%BE)&amp;source=s_q&amp;hl=ja&amp;geocode=ie=UTF8&amp;t=m&amp;output=embed"></iframe>
        br
        <a href="https://maps.google.co.jp/maps?f=q&amp;q=%E5%A4%A7%E9%98%AA%E5%BA%9C%E6%9D%B1%E5%A4%A7%E9%98%AA%E5%B8%82%E6%9C%AC%E5%BA%84%E8%A5%BF2-4-1+(%E5%A0%80%E5%B7%9D%E6%A9%9F%E6%A2%B0%E6%A0%AA%E5%BC%8F%E4%BC%9A%E7%A4%BE)&amp;source=embed&amp;hl=ja&amp;geocode=&amp;ie=UTF8&amp;t=m" style="color:#0000FF;text-align:left" target="_blank">大きな地図で見る</a>
      - elsif @product.area.try(:image)
        = image_tag @product.area.image.view.url, style: "width:100%;"
    
    - if @product.genre.products.length > 1
      h4 この商品と同じジャンルの商品
      .same-area style="overflow-x:scroll;border:1px solid #CCC;"
        .same-body style="white-space:nowrap;"
          - @product.genre.products.each do |p|
            - next if p.id == @product.id
            . style="width:160px;height:200px;display:inline-block;margin-left:8px;"
              .thumbnail style="height:100%;white-space:normal;overflow:hidden;"
                = link_to "/detail/#{p.id}" do
                  = image_tag "http://www.zenkiren.net/media/machine/f_20160824180900_0.jpg", style: "width:100%;"
                  .list_no No. #{p.list_no}
                  .name #{p.name} #{p.maker} #{p.model}
                .price #{number_with_delimiter(p.min_price)}円

  .col-sm-12.col-md-6
    - if @product.youtube.present?
      .youtube-area <iframe width="560" height="315" src="https://www.youtube.com/embed/#{@product.youtube}" frameborder="0" allowfullscreen></iframe>
    .imgs-area
      - if @product.product_images.size > 0
        - @product.product_images.each do |i|
          = image_tag i.image.view.url, style: "width:100%;"
