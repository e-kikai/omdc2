- set_meta_tags title: "#{@product.name} #{@product.maker} #{@product.model}商品詳細"
- breadcrumb  :detail, @product

.container-fluid.list-menu
  .col-sm-12.col-md-6
    .panel.panel-default
      .panel-heading 商品詳細
      .panel-body
        table.table.table-condensed.table-detail
          tr
            th リストNo.
            td = @product.list_no
          tr
            th ジャンル
            td #{@product.xl_genre.name} > #{@product.large_genre.name} > #{@product.genre.name}
          tr
            th 商品名
            td #{@product.name}
          tr
            th メーカー
            td #{@product.maker}
          tr
            th 型式
            td #{@product.model}
          tr
            th 最低入札金額
            td #{number_with_delimiter(@product.min_price)}円
          tr
            th 年式
            td = @product.year
          tr
            th 展示場所
            td = @product.display == "店頭出品" ? (@product.company.try(:name) || "-") : @product.area.name
          tr
            th 仕様
            td = simple_format(@product.spec)
          tr
            th 現状
            td = simple_format(@product.condition)
    .form-group
      = button_tag class: "btn btn-primary btn-lg" do
        span.glyphicon.glyphicon-bookmark
        =< "ウィッシュリストに追加"
        
